<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyBGC.MainPage"
             xmlns:pages="clr-namespace:MyBGC;assembly=MyBGC"
             BackgroundColor="DodgerBlue"
             
            >

    <Shell.FlyoutHeader>
        <StackLayout BackgroundColor="White" Padding="10">
            <Label Text="Мой БГК" FontSize="20" HorizontalTextAlignment="Center" TextColor="DodgerBlue"/>
            <Image HeightRequest="100" Source="https://i.imgur.com/i0DFAVG.jpg" />
        </StackLayout>
    </Shell.FlyoutHeader>

        <FlyoutItem Title="Главная">
        <ShellContent x:Name="Main" Title="Главная" ContentTemplate="{DataTemplate pages:Main}"/>
    </FlyoutItem>

    <FlyoutItem Title="Новости">
        <ShellContent x:Name="News" Title="Новости" ContentTemplate="{DataTemplate pages:News}"/>
    </FlyoutItem>

    <FlyoutItem Title="Абитуриенту">
       <Tab Title="Приемная комиссия">
        <ShellContent x:Name="Commmision" Title="Приемная комиссия" ContentTemplate="{DataTemplate pages:Comission}"/>
        </Tab>
        
        <Tab Title="Приемная кампания">
        <ShellContent x:Name="Company" Title="Приемная кампания" ContentTemplate="{DataTemplate pages:Company}"/>
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Специальности">
        <ShellContent x:Name="Prof" Title="Специальности" ContentTemplate="{DataTemplate pages:Professions}"/>
    </FlyoutItem>

    <FlyoutItem Title="Расписание занятий/звонков">
        <Tab Title="Занятия">
        <ShellContent  x:Name="Class" Title="Расписания занятий" ContentTemplate="{DataTemplate pages:ClassShedule}"/>
        </Tab>
        <Tab Title="Звонки">
            <ShellContent x:Name="Ring" Title="Расписание звонков" ContentTemplate="{DataTemplate pages:RingShedule}"/>
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Заказ справки">
        <ShellContent x:Name="Order" Title="Заказ справки учащегося" ContentTemplate="{DataTemplate pages:OrderHelpWarning}"/>
    </FlyoutItem>

    <FlyoutItem Title="Запись на ДПО и ПО">
        <ShellContent x:Name="DPO" Title="Запись на обучение по программам ДПО и ПО" ContentTemplate="{DataTemplate pages:RecordDPO}"/>
    </FlyoutItem>

    <FlyoutItem Title="Обращения граждан">
        <ShellContent x:Name="Appeals" Title="Обращение граждан" ContentTemplate="{DataTemplate pages:Appeals}"/>
    </FlyoutItem>

</Shell>
